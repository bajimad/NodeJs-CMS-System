<h1>Create Post</h1>

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="">Title</label>
        <input type="text" name="title" class="form-control">
    </div>

    <div class="form-group">
        <label for="">User</label>
        <select name="user" class="form-control" required>
            <option value="">Choose</option>
            {{#each users}}
                <option value="{{ this._id }}">{{ this.email }}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control" required>
            <option value="">Choose</option>
            {{#each categories}}
                <option value="{{ this._id }}">{{ this.name }}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="">Status</label>
        <select name="status" class="form-control" required>
            <option value="">Choose</option>
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-group">
        <label for="">Allow Comments</label>
        <input type="checkbox" name="allow_comments"> Allow Comments
    </div>
    
    <div class="form-group">
        <label for="">Thumbnail</label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-group">
        <label for="">Body</label>
        <textarea rows="10" name="body" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Create</button>
    </div>

</form>