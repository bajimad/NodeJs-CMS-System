    <!-- Title -->
    <h1 class="mt-4">{{ post.title }}</h1>

    <!-- Author -->
    <p class="lead">
    by
    <a href="#">{{ post.user }}</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p>Posted on {{formatDate post.date "MMMM Do YYYY" }}</p>

    <hr>

    <!-- Preview Image -->
    <img class="img-fluid rounded" src="/uploads/{{ post.file }}" alt="">

    <hr>

    <!-- Post Content -->
    <p class="lead">{{ post.body }}</p>


    <!-- Comments Form -->
    <div class="card my-4">
    <h5 class="card-header">Leave a Comment:</h5>
    <div class="card-body">
        <form action="/single/comment/create" method="POST">
        <div class="form-group">
            <input type="hidden" name="user" value="5b1d62a1ca90b80d48ba71e5">
            <input type="hidden" name="post" value="{{ post._id }}">
            <textarea class="form-control" name="body" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    </div>
    <!-- END Comments Form -->

    {{#each comments}}
    <!-- Single Comment -->
    <div class="media mb-4">
    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
    <div class="media-body">
        <h5 class="mt-0">Commenter Name</h5>
        {{ this.body }}
    </div>
    </div>
    <!-- END Single Comment -->
    {{/each}}